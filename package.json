{
  "name": "fs-indexer",
  "version": "0.0.7",
  "author": "hwaterke @hwaterke",
  "repository": "hwaterke/fs-indexer",
  "homepage": "https://github.com/hwaterke/fs-indexer",
  "license": "MIT",
  "type": "module",
  "exports": "./lib/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "fs-indexer": "./bin/run.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "oclif": {
    "bin": "fs-indexer",
    "dirname": "fs-indexer",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "postbuild": "shx cp -r src/drizzle/migrations dist/drizzle",
    "lint": "eslint . --ext .ts",
    "postpack": "shx rm -f oclif.manifest.json",
    "format": "prettier --write .",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "version": "oclif readme && git add README.md",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:drop": "drizzle-kit drop"
  },
  "dependencies": {
    "@hwaterke/media-probe": "npm:@jsr/hwaterke__media-probe@^0.0.5",
    "@oclif/core": "^3",
    "@oclif/plugin-help": "^6",
    "@paralleldrive/cuid2": "^2.2.2",
    "better-sqlite3": "^10.0.0",
    "drizzle-orm": "^0.30.10",
    "ignore": "^5.3.1",
    "luxon": "^3",
    "winston": "^3"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@types/better-sqlite3": "^7.6.10",
    "@types/luxon": "^3",
    "@types/node": "^20",
    "drizzle-kit": "^0.21.2",
    "eslint": "^8",
    "eslint-config-oclif": "^5",
    "eslint-config-oclif-typescript": "^3",
    "eslint-config-prettier": "^9.1.0",
    "oclif": "^4",
    "prettier": "^3",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "typescript": "^5"
  }
}
